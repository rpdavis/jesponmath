rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return isAuthenticated() && (getUserData().role == 'teacher' || getUserData().role == 'admin');
    }
    
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }
    
    // Simpler check without database read - for batch operations
    function isAuthenticatedUser() {
      return request.auth != null;
    }
    
    // Base users collection (authentication data)
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all user data
      allow read: if isAdmin();
      // Teachers can read basic user data for their students
      allow read: if isTeacher();
      
      // ANY authenticated user can create student records (simplified for batch operations)
      // Security is enforced by checking the role field
      allow create: if isAuthenticatedUser() && request.resource.data.role == 'student';
      // Admins can create any user
      allow create: if isAdmin();
      
      // Allow users to update their own profile (but not their role)
      allow update: if isAuthenticated() && request.auth.uid == userId && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']));
      // Teachers can update student profiles
      allow update: if isTeacher() && resource.data.role == 'student';
      // Admins can update any user data
      allow update: if isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Teachers collection
    match /teachers/{teacherId} {
      // Teachers can read their own data
      allow read: if isAuthenticated() && request.auth.uid == teacherId;
      // Admins can read all teacher data
      allow read: if isAdmin();
      
      // Only admins can write teacher data
      allow write: if isAdmin();
      // Teachers can update their own profile
      allow write: if isAuthenticated() && request.auth.uid == teacherId;
    }
    
    // Students collection
    match /students/{studentId} {
      // Students can read their own data
      allow read: if isAuthenticated() && request.auth.uid == studentId;
      // Teachers and admins can read student data
      allow read: if isTeacher() || isAdmin();
      
      // ANY authenticated user can create students (simplified for batch operations)
      allow create: if isAuthenticatedUser();
      // Students can update their own completedAssessments and updatedAt fields
      allow update: if isStudent() && 
                       request.auth.uid == studentId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['completedAssessments', 'updatedAt']);
      // Teachers and admins can update student data
      allow update: if isTeacher() || isAdmin();
      // Only admins can delete students
      allow delete: if isAdmin();
    }
    
    // Goals collection
    match /goals/{goalId} {
      // Teachers and admins can read/write goals
      allow read, write: if isTeacher() || isAdmin();
      // Students can read their own goals (check both old and new structure)
      allow read: if isStudent() && (
        resource.data.studentUid == request.auth.uid ||
        (resource.data.assignedStudents != null && request.auth.uid in resource.data.assignedStudents)
      );
    }
    
    // Assessments collection
    match /assessments/{assessmentId} {
      // Teachers and admins can read/write assessments
      allow read, write: if isTeacher() || isAdmin();
      // Students can read any assessment (they need to see assessment content to take it)
      // Assignment validation is handled at the application level
      allow read: if isStudent();
    }
    
    // Assessment results
    match /assessmentResults/{resultId} {
      // Teachers and admins can read all results
      allow read: if isTeacher() || isAdmin();
      // Students can read their own results
      allow read: if isStudent() && resource.data.studentUid == request.auth.uid;
      
      // Teachers and admins can write results
      allow write: if isTeacher() || isAdmin();
      // Students can write their own results (when taking assessments)
      allow write: if isStudent() && request.resource.data.studentUid == request.auth.uid;
    }
    
    // Assessment assignments (junction table)
    match /assessmentAssignments/{assignmentId} {
      // Teachers and admins can read all assignments
      allow read: if isTeacher() || isAdmin();
      // Students can only read their own assignments
      allow read: if isStudent() && resource.data.studentUid == request.auth.uid;
      
      // Only teachers and admins can create/update assignments
      allow write: if isTeacher() || isAdmin();
      
      // Students can update status when starting/completing (limited fields)
      allow update: if isStudent() && 
                       resource.data.studentUid == request.auth.uid &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'startedAt', 'completedAt', 'updatedAt']);
    }
    
    // Custom standards collection
    match /customStandards/{standardId} {
      // Teachers and admins can read/write custom standards
      allow read, write: if isTeacher() || isAdmin();
      // Students can read standards (for assessment taking)
      allow read: if isStudent();
    }
    
    // App categories collection
    match /appCategories/{categoryId} {
      // Teachers and admins can read/write app categories
      allow read, write: if isTeacher() || isAdmin();
      // Students can read categories (for viewing standards)
      allow read: if isStudent();
    }
    
    // App settings collection
    match /appSettings/{settingId} {
      // Admins can read/write all settings
      allow read, write: if isAdmin();
      // Teachers can read settings (but not write)
      allow read: if isTeacher();
      // Students can read certain settings
      allow read: if isStudent() && (settingId == 'academicPeriods');
    }
    
    // User profiles (legacy - for compatibility)
    match /userProfiles/{document} {
      allow read, write: if isAuthenticated();
    }
    
    // Diagnostic progress tracking (for resume functionality)
    match /diagnosticProgress/{progressId} {
      // Students can read/write their own progress
      // Teachers and admins can read all progress
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      allow write: if isAuthenticated() && (
        request.resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
    }
    
    // Assessment progress tracking (for resume functionality - ESA, Standard Assessments, etc.)
    match /assessmentProgress/{progressId} {
      // Students can read/write their own progress
      // Teachers and admins can read all progress
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      allow write: if isAuthenticated() && (
        request.resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
    }
    
    // Diagnostic real-time results (for teacher viewing during test)
    match /diagnosticResults/{resultId} {
      // Students can write their own results
      // Teachers and admins can read all results
      allow read: if isAuthenticated() && (isTeacher() || isAdmin());
      allow write: if isAuthenticated() && (
        request.resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
    }
    
    // Diagnostic assignments (for assigning diagnostics to students)
    match /diagnosticAssignments/{assignmentId} {
      // Students can read their own assignments
      // Teachers and admins can read all assignments
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      // Teachers and admins can create/update/delete assignments
      allow write: if isAuthenticated() && (isTeacher() || isAdmin());
      // Students can update their own assignments (limited fields for status tracking)
      allow update: if isAuthenticated() && 
                       resource.data.studentUid == request.auth.uid &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'isComplete', 'score', 'startedAt', 'completedAt', 'updatedAt']);
    }
    
    // Math Fluency Progress - ongoing proficiency tracking per student/operation
    match /mathFluencyProgress/{progressId} {
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      allow create: if isAuthenticated() && (isTeacher() || isAdmin());
      
      allow update: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Math Fluency Assessments - weekly fluency checks and initial diagnostics
    match /mathFluencyAssessments/{assessmentId} {
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      allow create: if isAuthenticated() && (isTeacher() || isAdmin());
      
      allow update, delete: if isAuthenticated() && (
        resource.data.teacherUid == request.auth.uid ||
        isAdmin()
      );
    }
    
    // Math Fluency Practice Sessions - daily practice logs
    match /mathFluencyPracticeSessions/{sessionId} {
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      allow create: if isAuthenticated() && (
        request.resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      allow update: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isAdmin()
      );
      
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Math Fluency Diagnostic Progress - for resumable diagnostics
    match /mathFluencyDiagnosticProgress/{progressId} {
      // Students can read their own progress, teachers can read all
      allow read: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      // Students can create their own progress documents
      allow create: if isAuthenticated() && 
        request.resource.data.studentUid == request.auth.uid;
      
      // Students can update their own progress, teachers can update all
      allow update: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
      
      // Students and teachers can delete progress
      allow delete: if isAuthenticated() && (
        resource.data.studentUid == request.auth.uid ||
        isTeacher() ||
        isAdmin()
      );
    }
    
    // REMOVED: Development rule for security
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}
